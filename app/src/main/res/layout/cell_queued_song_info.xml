<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="16dp">
    <TextView
        android:id="@+id/labelOwnerId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/text_med_emphasis"
        android:text="@string/label_owner_id"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tvOwnerId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/text_med_emphasis"
        tools:text="5180d7e0-deac-45e7-8e2d-17b6a2731e03"
        app:layout_constraintStart_toEndOf="@id/labelOwnerId"
        app:layout_constraintEnd_toStartOf="@id/btnEditNickname"
        app:layout_constraintTop_toTopOf="@id/labelOwnerId"
        app:layout_constraintBottom_toBottomOf="@id/labelOwnerId"
        android:layout_marginStart="4dp" />
    <ImageView
        android:id="@+id/btnEditNickname"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:padding="8dp"
        android:src="@drawable/ic_edit_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:tint="@color/text_med_emphasis"
        android:background="?android:selectableItemBackgroundBorderless"/>
</androidx.constraintlayout.widget.ConstraintLayout>