<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/conlayout_queue_nowplaying"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@drawable/card_elevation1_radius8"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp">
    <ImageView
        android:id="@+id/ivPlayingIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_music_note_black_24dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:tint="?attr/colorPrimary" />
    <TextView
        android:id="@+id/tvNowPlayingSong"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/text_med_emphasis"
        tools:text="Welcome to Bangkok i legenda o izuzetno dugackoj pjesmi.mp3"
        app:layout_constraintTop_toTopOf="@id/ivPlayingIcon"
        app:layout_constraintBottom_toBottomOf="@id/ivPlayingIcon"
        app:layout_constraintLeft_toRightOf="@id/ivPlayingIcon"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>